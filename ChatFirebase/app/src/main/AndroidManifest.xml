<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.savio.chatfirebase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatFirebase"
        android:name=".ChatAplication"
        >

        <activity android:name=".ChatActivity"
            android:label="@string/sexo"
            >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MessagesActivity" />
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/contacts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MessagesActivity" />
        </activity>
        <activity android:name=".MessagesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <service android:name=".FCMServie">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGE_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>